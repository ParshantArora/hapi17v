'use strict';
import Hapi from 'hapi';
import plugins from './plugins'; 
import configureServer from './db';

const server= Hapi.server({
    host : 'localhost',
    port : 4000  
});
configureServer();
server.route({
    method : 'Post',
    path : '/hello',
    handler : function(request,h){
        return ({message : 'yo man'})
    }
});

const start = async  ()=>{
    /*
    All Plugin registers
    */
    await(server.register(plugins));
    try{
        await server.start();
    }catch(err){
        console.log(err);
        process.exit(1);
    }
    console.log('server running at', server.info.uri)
};

start();